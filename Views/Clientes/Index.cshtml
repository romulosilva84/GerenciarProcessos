@model IEnumerable<GerenciarProcessos.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Gerenciar processos - Clientes</h1>

<p>
    <a asp-action="Create">Adicionar clientes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteID">Editar</a> |
                @*<a asp-action="Details" asp-route-id="@item.ClienteID">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.ClienteID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
